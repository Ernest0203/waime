.products::-webkit-scrollbar {
  width: 6px;
}
.products::-webkit-scrollbar-track {
	border-radius: 10px
  box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
}
.products::-webkit-scrollbar-thumb {
	border-radius: 10px
  background-color: darken(bg-color, 30%);
  outline: 1px solid slategrey;
}

.products-list
	display: flex
	flex-wrap: wrap
	justify-content: space-between

.product-item
	background-color: white
	border-radius: 5px
	cursor: pointer
	margin-bottom: 20px 
	padding: 10px
	width: 32%
	position: relative
	// &:hover > .overlay {
	// 	display: flex	
	// }
	@media (max-width: 1000px)
		width: 48%
	&__img 
		min-height: 250px
		margin-bottom: 20px
		overflow: hidden
		position: relative
		&:hover > .overlay {
			display: flex	
		}
		img
			min-height: 100%
			min-width: 100%
			max-width: 100%
			margin: auto
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 0
	&__title
		margin-bottom: 20px
	.order-options
		margin-bottom: 20px
		&__price
			float: right
		.quantity-counter
			margin-left: 10px
			font-weight: bold
			&__count
				margin: 0 10px
			&__sign
				font-size: 20px
	.btn-buy
		display: block 
		margin: 0 auto
		padding: 3px 4px
		width 60px
	.overlay
		background-color: rgba(0,0,0,.5)
		border-radius: 5px
		display: none
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		height: 100%
		width: 100%
		&__btn
			display: block
			margin: auto

.desc-popup
		display: flex
		background-color: rgba(0,0,0,0.5)
		position: fixed
		top: 0
		left: 0
		height: 100vh
		width: 100vw
		z-index: 10
		.popup
			background-color: #f7f7f7
			border-radius: 5px
			display: flex
			flex-direction: column
			width: 500px
			height: 500px
			margin: 10% auto
			padding: 20px 20px
			position: relative
			z-index: 11
			&__title
				margin: 30px 0
			&__image
				border-radius: 5px
				height: 70%
				overflow: hidden
				position: relative
				img
					min-height: 100%
					min-width: 100%
					max-width: 100%
					margin: auto
					position: absolute
					top: 0
					right: 0
					bottom: 0
					left: 0
			.close-btn
				color: rgb(177, 14, 0)
				position: absolute
				top: 2px
				right: 7px
