.cart-wrapper
	display: flex
	background-color: rgba(0,0,0,0.5)
	position: fixed
	top: 0
	left: 0
	height: 100vh
	width: 100vw
	z-index: 10
	.cart, .order
		background-color: #f7f7f7
		border-radius: 5px
		display: flex
		flex-direction: column
		width: 500px
		margin: auto
		padding: 20px 20px
		position: relative
		z-index: 11
		&__total-price
			font-weight: 700
			margin-top: 15px
			text-align: right
		.close-btn
			color: rgb(177, 14, 0)
			position: absolute
			top: 2px
			right: 7px
		&__btn-order
			margin: 15px auto 0
			width: 30%
	.cart-list
		border: 1px solid #cccccc
		&__item
			background-color: #eaeaea 
			border-bottom: 1px solid #cccccc
			display: flex
			padding: 15px
			position: relative
			&:last-child
				border-bottom: none
			.col:nth-of-type(1)
				margin-right: 20px 
			.item-image
				width: 100px
			.item-name
				text-align: left
				margin-bottom: 20px
				&.-empty
					margin: auto
			span 
				font-size: 16px
				margin-right: 10px
				font-weight: 700
			.item-remove
				color: rgb(177, 14, 0)
				position: absolute
				bottom: 5px
				right: 7px
	.order
		width: 350px
		&__title
			margin-bottom: 20px
	form 
		input
			background-color: #eee
			border 1px solid #ccc
			border-radius: 5px
			color: main-color
			font-style: italic
			margin-bottom: 10px
			padding: 10px 5px
			text-transform: uppercase
			width: 100%
			&:focus 
				background-color: #ffffff
				border-color: #ffba26
				outline: none
			&::-webkit-input-placeholder
				color: #b9b9b9
		.btn-submit
			display: block
			margin: 0 auto
